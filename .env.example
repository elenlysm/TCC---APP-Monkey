# Exemplo de configuração de variáveis de ambiente para o backend

# Firebase Configuration

FIREBASE_API_KEY= # Chave de API do Firebase
FIREBASE_AUTH_DOMAIN= # Domínio de autenticação
FIREBASE_PROJECT_ID= # ID do projeto Firebase
FIREBASE_STORAGE_BUCKET= # Bucket de armazenamento
FIREBASE_MESSAGING_SENDER_ID= # ID do remetente de mensagens
FIREBASE_APP_ID= # ID do aplicativo Firebase

# Chave secreta para criptografia dos tokens (use uma string forte e secreta)
ENCRYPTION_SECRET=coloque_uma_senha_bem_forte_aqui

# Credenciais da API Open Finance
OPEN_FINANCE_CLIENT_ID=seu_client_id_aqui
OPEN_FINANCE_CLIENT_SECRET=seu_client_secret_aqui
OPEN_FINANCE_REDIRECT_URI=http://localhost:3000/callback

# Configurações do Firebase Admin SDK
FIREBASE_PROJECT_ID=seu_project_id
FIREBASE_CLIENT_EMAIL=seu_client_email
# Atenção: lembre-se de escapar corretamente quebras de linha com \n
FIREBASE_PRIVATE_KEY="sua_private_key_com_aspas_escapadas"

# Porta do servidor Express
PORT=3000
