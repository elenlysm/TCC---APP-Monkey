{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "module": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "env.d.ts",
    "expo-env.d.ts",
    ".expo/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "backend",
    "babel.config.js",
    "eslint.config.js",
    "app/app.config.js",
    "app/eslint.config.js",
    "scripts",
    "functions"
  ]
}